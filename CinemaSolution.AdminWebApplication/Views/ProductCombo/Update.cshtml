@model CinemaSolution.ViewModels.Product.ProductComboUpdateRequest;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update product combo";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/movie/create.css" />
}

<nav class="breadcrumb">
    <ol class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a class="load-target" asp-action="Index">Product Combos</a>
        </li>
        <li class="breadcrumb-item">
            @Model.Id
        </li>
    </ol>
</nav>

<div class="content-body">
    <form asp-action="Update" method="post">

        <div class="form-group">
            <label for="product_combo-name" class="form-label">Name</label>
            <input type="text"
                   class="form-control"
                   id="product_combo-title"
                   asp-for="@Model.Name"
                   placeholder="Enter name">
        </div>

        <div class="form-group">
            <label for="product_combo-price" class="form-label">Price</label>
            <input type="number"
                   class="form-control"
                   id="product_combo-price"
                   asp-for="@Model.Price"
                   value="120000">
        </div>

        <div class="form-group">
            <label for="product_combo-desc" class="form-label">Description</label>
            <textarea asp-for="@Model.Description" class="form-control" style="max-width: none;" id="product_combo-desc" cols="30" rows="10" placeholder="Enter description"></textarea>
        </div>

        <div class="form-group">
            <label for="product_combo-imageUrl" class="form-label">Image URL</label>
            <input type="text"
                   class="form-control"
                   id="product_combo-imageUrl"
                   asp-for="@Model.ImageUrl"
                   placeholder="Enter image URL">
        </div>

        <div class="row form-group-btn">
            <button type="submit" class="btn success-btn">Save</button>
            <button type="reset" class="btn reset-btn">Reset</button>
            <a class="btn delete-btn load-target" asp-controller="ProductCombo" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>