@model CinemaSolution.ViewModels.Cinema.CinemaUpdateRequest;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Update Cinema";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/cinema/create.css" asp-append-version="true" />
}

<nav class="breadcrumb">
    <ol class="breadcrumb-list">
        <li class="breadcrumb-item">
            <a asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a class="load-target" asp-controller="Cinema" asp-action="Index">Cinemas</a>
        </li>
        <li class="breadcrumb-item">
            Update
        </li>
    </ol>
</nav>

<div class="content-body">
    <form asp-action="Update" method="post">
        <div class="form-group">
            <label for="cinema-name" class="form-label">Name of cinema</label>
            <input type="text" class="form-control" id="cinema-name" asp-for="Name" placeholder="Enter name">
        </div>

        <div class="form-group form-group-dropdown">
            <label for="cinema-province" class="form-label">Province</label>
            <div class="dropdown">
                <input type="text" class="form-control" id="cinema-province" asp-for="ProvinceId" hidden>
                <div class="select">
                    @if (ViewBag.ProvinceId == null)
                    {
                        <span id="cinema-province-selection" class="selected" data-id="-1">Select province</span>
                    }
                    else
                    {
                        <span id="cinema-province-selection" class="selected" data-id="@ViewBag.ProvinceId">@ViewBag.ProvinceName</span>
                    }
                    <i class="fa fa-chevron-left select-icon"></i>
                </div>
                <ul class="dropdown-content dropdown-content-show">
                    @foreach (var item in ViewBag.Provinces)
                    {
                        <li class="dropdown-item" data-id="@item.Id" data-value="@item.Name" onclick="updateSelection(@item.Id)">@item.Name</li>
                    }
                </ul>
            </div>
        </div>

        <div class="form-group">
            <label for="cinema-address" class="form-label">Address</label>
            <input type="text" class="form-control" id="cinema-address" asp-for="Address" placeholder="Enter address">
        </div>

        <div class="row form-group-btn">
            <button type="submit" class="btn success-btn">Save</button>
            <button type="reset" class="btn reset-btn">Reset</button>
            <a class="btn delete-btn load-target" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/pages/cinema/index.js" asp-append-version="true"></script>
}